{
  "name": "mdp",
  "version": "1.0.0",
  "description": "to process QL sales data",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "homepage": "https://github.com/electron/electron-quick-start#readme",
  "bugs": {
    "url": "https://github.com/electron/electron-quick-start/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electron/electron-quick-start.git"
  },
  "license": "MIT",
  "author": "QL Sales",
  "type": "commonjs",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "electron . --log-level=3 --silent",
    "build": "vite build",
    "package": "vite build && electron-builder"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@quasar/vite-plugin": "^1.10.0",
    "@tailwindcss/cli": "^4.1.10",
    "@vitejs/plugin-vue": "^6.0.3",
    "daisyui": "^5.0.43",
    "electron": "^36.9.5",
    "electron-builder": "^26.0.12",
    "node-dbf": "^0.4.0",
    "sass": "^1.97.0",
    "tailwindcss": "^4.1.10",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-optimizer": "^1.4.3"
  },
  "dependencies": {
    "@quasar/extras": "^1.17.0",
    "basic-ftp": "^5.0.5",
    "csv": "^6.3.11",
    "csv-parse": "^5.6.0",
    "dayjs": "^1.11.13",
    "dbffile": "^1.12.0",
    "fuse.js": "^7.1.0",
    "iconv-lite": "^0.6.3",
    "js-yaml": "^4.1.0",
    "jsftp": "^2.1.3",
    "mysql2": "^3.14.1",
    "net": "^1.0.2",
    "quasar": "^2.18.6",
    "ssh2-sftp-client": "^12.0.1",
    "tls": "^0.0.1",
    "vue": "^3.5.25",
    "winston": "^3.19.0",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.ql.mdp",
    "productName": "MDP",
    "copyright": "Copyright 2025 QL Sales",
    "directories": {
      "output": "release"
    },
    "npmRebuild": false,
    "files": [
      "dist",
      "dist-electron",
      "const.js",
      "mdp.js",
      "mapOutlet.js",
      "data/**/*",
      "package.json",
      "!**/*.un~",
      "!**/node_modules/**/.gitignore",
      "!**/node_modules/**/.travis.yml"
    ],
    "extraResources": [
      "config.yaml"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh"
    }
  }
}
